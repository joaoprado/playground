
if [ $# -eq 0 ]
  then
    echo "Tag de versão não informada!"
    exit 1
fi

# Publish new version
echo "[PHP] Publicando nova tag: $1"
docker build -t playground-gerador:$1 .
docker tag playground-gerador:$1 joaoprado/playground-gerador:$1
docker push joaoprado/playground-gerador:$1

# Publish latest stuff to latest tag
echo "[PHP] Atualizando tag latest"
docker build -t playground-gerador:latest .
docker tag playground-gerador:latest joaoprado/playground-gerador:latest
docker push joaoprado/playground-gerador:latest
