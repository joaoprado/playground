
if [ $# -eq 0 ]
  then
    echo "Tag de versão não informada!"
    exit 1
fi

# Publish new version
echo "[React Native] Publicando nova tag: $1"
docker build -t playground-rnative:$1 .
docker tag playground-rnative:$1 joaoprado/playground-rnative:$1
docker push joaoprado/playground-rnative:$1

# Publish latest stuff to latest tag
echo "[React Native] Atualizando tag latest"
docker build -t playground-rnative:latest .
docker tag playground-rnative:latest joaoprado/playground-rnative:latest
docker push joaoprado/playground-rnative:latest
